    <script>
        async function testMarketData() {
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = 'Testing Market Data API...\n';
            
            try {
                const response = await fetch('/api/market-data');
                if (response.ok) {
                    const data = await response.json();
                    const symbolCount = Object.keys(data.symbols || {}).length;
                    const btcPrice = data.symbols?.BTC?.price || 'N/A';
                    
                    resultDiv.innerHTML = `‚úÖ MARKET DATA API - SUCCESS!
                    
üìä Response Details:
‚Ä¢ Status: ${response.status} OK
‚Ä¢ Success: ${data.success}
‚Ä¢ Currency: ${data.currency}
‚Ä¢ Symbols Found: ${symbolCount}
‚Ä¢ BTC Price: $${btcPrice}
‚Ä¢ Data Source: ${data.source || 'Enhanced Market Manager'}
‚Ä¢ Timestamp: ${data.timestamp}

ü™ô Available Symbols:
${Object.keys(data.symbols || {}).map(symbol => 
    `‚Ä¢ ${symbol}: $${data.symbols[symbol].price} (${data.symbols[symbol].change > 0 ? '+' : ''}${data.symbols[symbol].change.toFixed(2)}%)`
).join('\n')}

‚úÖ The "Failed to fetch" error is COMPLETELY FIXED!`;
                } else {
                    resultDiv.innerHTML = `‚ùå Market Data API Error:
Status: ${response.status} - ${response.statusText}
This shouldn't happen if the enhanced main.py is applied correctly.`;
                }
            } catch (error) {
                resultDiv.innerHTML = `‚ùå Market Data API Connection Error:
${error.message}

üí° Possible causes:
‚Ä¢ Bot is not running
‚Ä¢ Wrong port
‚Ä¢ Firewall blocking connection`;
            }
        }
        
        async function testHealth() {
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = 'Testing Health Check API...\n';
            
            try {
                const response = await fetch('/health');
                if (response.ok) {
                    const data = await response.json();
                    const components = data.components || {};
                    const activeComponents = Object.entries(components).filter(([k,v]) => v === true);
                    
                    resultDiv.innerHTML = `‚úÖ HEALTH CHECK - SUCCESS!

üè• System Health:
‚Ä¢ Status: ${data.status}
‚Ä¢ Service: ${data.service || 'Elite Trading Bot V3.0'}
‚Ä¢ Uptime: ${data.uptime_seconds ? (data.uptime_seconds / 60).toFixed(1) + ' minutes' : 'N/A'}

üîß Active Components (${activeComponents.length}):
${activeComponents.map(([name, status]) => `‚Ä¢ ${name}: ${status ? '‚úÖ' : '‚ùå'}`).join('\n')}

üìä System Resources:
‚Ä¢ Memory Usage: ${data.system?.memory_usage || 'N/A'}%
‚Ä¢ CPU Usage: ${data.system?.cpu_usage || 'N/A'}%`;
                } else {
                    resultDiv.innerHTML = `‚ùå Health Check Error: ${response.status}`;
                }
            } catch (error) {
                resultDiv.innerHTML = `‚ùå Health Check Error: ${error.message}`;
            }
        }
        
        async function testAllEndpoints() {
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = 'Testing All Endpoints...\n\n';
            
            const endpoints = [
                { url: '/ping', name: 'Ping' },
                { url: '/health', name: 'Health Check' },
                { url: '/api/market-data', name: 'Market Data' },
                { url: '/api/trading-pairs', name: 'Trading Pairs' },
                { url: '/api/endpoints', name: 'Endpoints List' }
            ];
            
            let results = '';
            let successCount = 0;
            
            for (const endpoint of endpoints) {
                try {
                    const response = await fetch(endpoint.url);
                    if (response.ok) {
                        results += `‚úÖ ${endpoint.name}: ${response.status} OK\n`;
                        successCount++;
                    } else {
                        results += `‚ùå ${endpoint.name}: ${response.status} ${response.statusText}\n`;
                    }
                } catch (error) {
                    results += `‚ùå ${endpoint.name}: Connection failed\n`;
                }
            }
            
            const successRate = ((successCount / endpoints.length) * 100).toFixed(1);
            
            resultDiv.innerHTML = `üß™ ENDPOINT TEST RESULTS:

${results}
üìä Summary:
‚Ä¢ Success Rate: ${successRate}% (${successCount}/${endpoints.length})
‚Ä¢ Total Tests: ${endpoints.length}
‚Ä¢ Passed: ${successCount}
‚Ä¢ Failed: ${endpoints.length - successCount}

${successCount === endpoints.length ? 'üéâ ALL TESTS PASSED!' : '‚ö†Ô∏è Some endpoints need attention'}`;
        }
        
        function clearResults() {
            document.getElementById('result').innerHTML = 'Results cleared. Click a button above to test your APIs...';
        }
        
        // Auto-test market data on page load
        window.onload = function() {
            setTimeout(testMarketData, 1000);
        };
    </script>
